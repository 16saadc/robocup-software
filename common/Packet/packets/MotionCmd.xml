<packet name="MotionCmd" uid="2">
	
	<type name="Point2d" namespace="Geometry" file="Geometry/Point2d.hpp" />
	<type name="Circle2d" namespace="Geometry" file="Geometry/Circle2d.hpp" />
	
	<enum name="MotionStyle">
		<item name="Fast"/>
		<item name="Accurate" />
	</enum>
	
	<type name="Robot">
		
		<!-- if true the motion command is valid for this robot -->
		<bool name="valid" />
		
		<!-- the style of motion -->
		<MotionStyle name="style" value="Fast" />
		
		<!-- position to goto -->
		<Point2d name="pos" />
		
		<!-- point to face -->
		<Point2d name="face" />
		
		<!-- if true the robot will avoid the specified region -->
		<bool name="avoid" />
		<!-- region to avoid -->
		<Circle2d name="avoidZone" />
		
		<!-- if true the robot will spin in place -->
		<bool name="spin" />
		
		<!-- passthrough members -->
		<int8_t name="roller" />
		<uint8_t name="kick" />
		
		<!-- if true this robot is the goalie -->
		<bool name="goalie" />
	</type>
	
	<uint64_t name="timestamp" />
	
	<Robot name="robots" qty="5" />
	
	<!-- if baton = [0,4[ then enable reverse channel for robot -->
	<int name="baton" value="-1" />
	
</packet>