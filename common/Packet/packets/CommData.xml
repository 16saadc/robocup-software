<packet name="CommData" uid="1">
	
	<!-- How the radio process updates status of robots/boards.
         A robot is a board that is assigned a valid robot ID. -->
	<enum name="StatusMode">
		
		<!-- Updates status on a single robot -->
		<item name="Fixed" />
		
		<!-- Cycles through all robots -->
		<item name="ScanRobots" />
	</enum>
	
	<type name="Robot">
		
		<!-- speed of roller. Positive = dribbling -->
		<int8_t name="roller" />
		
		<!-- kick strength -->
		<uint8_t name="kick" />
		
		<int8_t name="motors" qty="4" />
		
		<bool name="oneTouch" />
		
		<bool name="valid" />
	</type>
	
	<uint64_t name="timestamp" />
	
	<Robot name="robots" qty="5" />
	
	<StatusMode name="mode" />
	
	<!-- robot number if mode == Fixed -->
	<int name="robot" />
</packet>